<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    android:background="@drawable/home_background"
    android:orientation="horizontal"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/call_help"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/telefon" />

            <ImageButton
                android:id="@+id/audian_help"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/seyirci" />

            <ImageButton
                android:id="@+id/half_help"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/yuzdeelli" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="5"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/count_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/saniye"
                android:gravity="center"
                android:text="99"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/quest_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/switchcontainer"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/a"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/switchcontainer"
                        android:padding="5dp"
                        android:tag="1"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/b"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/switchcontainer"
                        android:tag="2"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/c"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/switchcontainer"
                        android:padding="5dp"
                        android:tag="3"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/d"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/switchcontainer"
                        android:padding="5dp"
                        android:tag="4"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="14">

        <Button
            android:id="@+id/lev12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_barajsira"
            android:text="1000000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="250000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="125000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="60000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="30000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_barajsira"
            android:text="15000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="7500"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="5000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="3000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="2000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_barajsira"
            android:text="1000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/lev1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/para_normalsira"
            android:text="500"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/withdraw_btn"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:background="@drawable/para_normalsira"
            android:padding="5dp"
            android:text="Withdraw"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>