<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fu.prm392.finalProject.milionare">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/millionaire"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/millionaire"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.fu.prm392.finalProject.milionare.MainMenu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fu.prm392.finalProject.milionare.QuestionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.fu.prm392.finalProject.milionare.ScoreList"
            android:screenOrientation="landscape" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>